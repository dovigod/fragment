{
  "compilerOptions": {
    "target": "esnext", //
    // "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",

    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    // "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,

    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/*", "./test/*"],
  "ts-node": {
    "esm": true
  }
}
